@model DeveloperTestWebUI.Models.ProductSearchModel
@{
    ViewBag.Title = "Home Page";
}

<div style="text-align:center;" class="jumbotron">
    <h1>Product search</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <h3>
            Size: @Html.DropDownList("SizeID", new SelectList(Model.Sizes, "Value", "Text"), "Select a size..", new { @style = "width: 200px;" })
        </h3>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
</div>